// This function normalizes the angle so it returns a value between -180째 and 180째 instead of 0째 to 360째.
public void angleWrap(double radians) {

    while (radians > Math.PI) {
        radians -= 2 * Math.PI;
    }  
    while (radians < -Math.PI) {
        radians += 2 * Math.PI;
    }

    // keep in mind that the result is in radians
    return radians;
}

